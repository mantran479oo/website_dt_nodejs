    <!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title> Nhóm 6 - Admin - Register</title>

    <!-- Custom fonts for this template-->
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">
          <link href="/css/owl.carousel.css" rel="stylesheet">
    <!-- Custom styles for this template-->
    <link href="css/sb-admin-2.min.css" rel="stylesheet">

</head>

<body class="bg-gradient-primary">

    <div class="container">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Thêm Sản Phẩm</h1>
                            </div>
                            <form class="user" method="post" action="products/add" enctype="multipart/form-data">
                            <%if(Success.length > 0){%> <div class="alert alert-success"><strong><%=Success%></strong></div>
                            <%}if(error.length>0){%><div class="alert alert-danger"><strong><%=error%></strong></div><%}%>
                                <div class="form-group">
                                    <input type="text" class="form-control form-control-user" name="name" id="exampleInputEmail"
                                        placeholder="Tên sẩn phẩm" required>
                                </div>
                                <div class="form-group">
                                    <input type="file" name="img" required>
                                </div>
                                <div class="form-group">
                                <%if(mess.length > 0){%> <div class="alert alert-success"><strong><%=mess%></strong></div>
                                <%}if(messs.length > 0){%> <div class="alert alert-success"><strong><%=messs%></strong></div>
                                <%}if(ses.length > 0){%> <div class="alert alert-success"><strong><%=ses%></strong></div><%}%>
                                <div class="row">
                                <div class="col-sm-7" id= "cat">
                                    <select class="form-control" id="exampleInputEmail" name="list">
                                    <%for(c of listCat){%>
                                        <option value="<%=c.idCat%>"><%=c.nameCat%></option>
                                       <%}%>
                                    </select>
                                    
                                    </div>
                                    <div class="col-sm-5">
                                    <div class="form-group">
                                    <input type="button" class="btn btn-warning" value="Thêm Thương Hiệu" data-toggle="collapse" data-target="#demo"></div>
                                </div>
                                </div>
                                </div>
                                <div class="form-group">
                                <div id="demo" class="collapse">
                                   <div class="input-group mb-3">
                                        <input type="text" id="text"  class="form-control" placeholder="Nhập thương hiệu">
                                        <div class="input-group-append">
                                            <button class="btn btn-success" onclick="addcart()" type="button" style ="margin-left: 0px;" >Go</button>
                                        </div>
                                        </div>
                                    </div>
                                    </div>
                                <div class="form-group">
                                    <input type="text" class="form-control form-control-user" name="price" id="exampleInputEmail"
                                        placeholder="Giá sản phẩm" required>
                                </div>
                                <div class="form-group">
                                    <input type="number" class="form-control form-control-user" name="sl" value="1" min="1" step="1" id="exampleInputEmail"
                                        placeholder="Số lượng sẩn phẩm" required>
                                </div>
                                <button  class="btn btn-primary btn-user btn-block">Thêm </button>
                                <hr>
                                <a href="/products" class="btn btn-google btn-user btn-block">Trở lại</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="vendor/jquery-easing/jquery.easing.min.js"></script>


<script>
function addcart() {
  var text = document.getElementById('text').value;
   $.post("/products/addcat",{"text":text},function(data){
       location.reload();
      });
}
</script>

    <!-- Custom scripts for all pages-->
    <script src="js/sb-admin-2.min.js"></script>

</body>

</html>