    <!-- My Account Start -->
    <div class="my-account">
    <div class="cen">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-3">
                    <div class="btn-group-vertical bet">
                     <button class="btn btn-primary "><a class="nav-link" id="orders-nav" data-toggle="pill" href="#orders-tab" role="tab">Đơn Hàng</a></button>
                     <button class="btn btn-primary "><a class="nav-link" id="address-nav" data-toggle="pill" href="#address-tab" role="tab">Địa Chỉ Nhận Hàng</a></button>
                     <button class="btn btn-primary "><a class="nav-link" id="account-nav" data-toggle="pill" href="#account-tab" role="tab">Chi Tiết Tài Khoản</a> </button>
                     <button class="btn btn-primary "><a class="nav-link" href="/user/dang-xuat"><i class="fa fa-sign-out-alt"></i>Đăng Xuất</a></button>
                    </div>
                </div>
                <div class="col-md-9">
                    <div class="tab-content">
                            <%if(e.length>0){%>
                            <div class="alert alert-danger"><strong><%=e%></strong></div><%}%>
                             <%if(s.length>0){%>
                            <div class="alert alert-success"><strong><%=s%></strong></div><%}%> 

                        <div class="tab-pane fade" id="orders-tab" role="tabpanel" aria-labelledby="orders-nav">                       
                            <div class="table-responsive"> 
                             <%if(listO !=0){%> 
                                   <table class="table table-bordered">
                                    <thead class="thead-dark">
                                        <tr>
                                            <th>STT</th>
                                            <th>Đơn hàng</th>
                                            <th>Số lượng</th>
                                            <th>Ngày mua</th>
                                            <th>Trạng thái đơn hàng</th>
                                            <th> Tổng giá sản phẩm</th>
                                        </tr>
                                    </thead>
                                   <% var i = 1;for (o of listO){%>
                                    <tbody>
                                        <tr>
                                            <td><%=i++%></td>
                                            <td>Đơn hàng <%=o.nameOrder%></td>
                                             <td><%=o.quantityOrder%></td>
                                            <td><%=o.date%></td>
                                            <%if(o.status == 1){%>
                                            <td>Đang xử lý ...</td>
                                            <%}%>
                                            <%if(o.status == 2 ){%>
                                            <td>Đã giao hàng</td>
                                            <%}%>
                                            <td><%=o.priceOrder.toLocaleString('vi-VN')%>VND</td>
                                        </tr>
                                    </tbody>
                                    <%}%>
                                </table>
                                <%}else{%>
                                <h2>Không có đơn hàng nào</h2><%}%>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="address-tab" role="tabpanel" aria-labelledby="address-nav">
                            <div class="row">
                            <form method="post">
                                <div class="col-md-6">
                                <%for(lis of listU){%>
                                <table class="table table-bordered">
                                <thead class="thead-dark">
                                    <tr>
                                            <th>Địa chỉ</th>
                                            <th>Số điện thoại</th>
                                    </tr>
                                </thead>
                                  <tbody>
                                        <tr>
                                            <td><p><%=lis.address%> </p></td>
                                            <td><p><%=lis.phone%></p></td>
                                        </tr>
                                    </tbody>
                                    </table>
                                </div>
                                 <%}%>
                             </form>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="account-tab" role="tabpanel" aria-labelledby="account-nav">
                            <h4>Đổi Mật Khẩu</h4>
                            <form action="/user/doi-mat-khau" method="post">
                                <div class="row">
                                    <div class="col-md-12">
                                        <input name="password" class="form-control" type="password" placeholder="Mật khẩu hiện tại">
                                    </div>
                                    <div class="col-md-6">
                                        <input name="newPassword" class="form-control" type="text" placeholder="Mật khẩu mới">
                                    </div>
                                    <div class="col-md-6">
                                        <input name="confirmPassword" class="form-control" type="text" placeholder="Xác nhận mật khẩu mới">
                                    </div>
                                    <div class="col-md-12">
                                        <button class="btn">Đổi mật khẩu</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                   </div>
                 </div>
                </div>
            </div>
        </div>
    </div>
